module play_backgroumd_music(clk,mode,freq);
	input [1:0]mode;
	input clk;
	output wire [15:0]fre;
	reg [10:0] addr;
	
	always@(negedge clk)
	begin
		case(status)
				2'b00: begin//stop
							addr=0;
						end
				2'b01:begin//斗地主
							if(addr<552)
								addr=addr+1;
							else 
								addr=0;							
							end
				2'b10:begin//小星星
							if(addr<552)
								addr=552;
							else if(addr<1112 && addr>551)
								addr=addr+1;
							else 
								addr=552;							
							end
				2'b11:begin//茉莉花
							if(addr<1112)
								addr=1112;
							else if(addr<1728 && addr>1111)
								addr=addr+1;
							else 
								addr=1112;							
							end						
		endcase
	end
background_music bgm_piano(addr,clk,freq);//根据简谱找到对应频率，乘以系数后存入ip核，截断为16bit数
	